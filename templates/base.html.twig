<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>DoudouPike | {% block title %}Portfolio{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>
        <header id="topbar">
            <nav class="navbar">
                <a class="navbar-brand" href="{{ path('index') }}">
                    <img id="logo" src="{{ asset('uploads/logo.gif') }}" alt="logo_DoudouPike">
                </a>
            </nav>
        </header>
        <main id="main" class="container-fluid">
            {% block body %}{% endblock %}
        </main>
        <aside id="information">
            <i class="fa fa-question"></i>
        </aside>
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
